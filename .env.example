# Boss Workflow Automation - Environment Variables
# Copy this file to .env and fill in your values

# ======================
# APPLICATION SETTINGS
# ======================
DEBUG=false
ENVIRONMENT=production

# Server settings
HOST=0.0.0.0
PORT=8000
WEBHOOK_BASE_URL=https://your-domain.railway.app

# ======================
# TELEGRAM
# ======================
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Your personal chat ID to receive notifications (get from @userinfobot)
TELEGRAM_BOSS_CHAT_ID=your_chat_id

# ======================
# DEEPSEEK AI
# ======================
# Get this from platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# ======================
# DISCORD
# ======================
# Create webhooks in Discord channel settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_TASKS_CHANNEL_WEBHOOK=https://discord.com/api/webhooks/...
DISCORD_STANDUP_CHANNEL_WEBHOOK=https://discord.com/api/webhooks/...

# Optional: Bot token for reaction tracking
# DISCORD_BOT_TOKEN=your_discord_bot_token

# ======================
# GOOGLE SERVICES
# ======================
# Create a service account and download JSON credentials
# Then paste the entire JSON as a single line here (escape quotes)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Google Sheet ID (from the URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit)
GOOGLE_SHEET_ID=your_google_sheet_id

# ======================
# DATABASE
# ======================
# Railway provides this automatically when you add Postgres
DATABASE_URL=postgresql://user:password@host:port/database

# ======================
# REDIS
# ======================
# Railway provides this automatically when you add Redis
REDIS_URL=redis://default:password@host:port

# ======================
# SCHEDULER SETTINGS
# ======================
TIMEZONE=America/New_York

# Daily standup time (24-hour format)
DAILY_STANDUP_HOUR=9

# End of day reminder time
EOD_REMINDER_HOUR=18

# Weekly summary day and time
WEEKLY_SUMMARY_DAY=friday
WEEKLY_SUMMARY_HOUR=17

# ======================
# CONVERSATION SETTINGS
# ======================
# Minutes before sending timeout reminder
CONVERSATION_TIMEOUT_MINUTES=30

# Hours before auto-finalizing abandoned conversations
AUTO_FINALIZE_HOURS=2

# ======================
# REMINDER SETTINGS
# ======================
# Hours before deadline to send reminder
DEADLINE_REMINDER_HOURS=2

# Hours between overdue task alerts
OVERDUE_ALERT_INTERVAL_HOURS=4
